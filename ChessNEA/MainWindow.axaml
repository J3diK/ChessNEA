<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="1000"
        x:Class="ChessNEA.MainWindow"
        Title="ChessNEA"
        CanResize="False"
        Height="1000"
        Width="1400">
    
    <Grid ColumnDefinitions="1000, *">
        <Image Grid.Column="0" Source="/Assets/Images/Board.png" Width="800"/>
        <UniformGrid Grid.Column="0" x:Name="BoardGrid"
                     Width="800"
                     Height="800"
                     Rows="8"
                     Columns="8">
        </UniformGrid>
    </Grid>
</Window>
