<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="150"
        x:Class="ChessNEA.PromotionOptions"
        Title="PromotionOptions"
        CanResize="False"
        Height="150"
        Width="300">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <RadioButton Content="Queen" GroupName="PromotionOptions"
                         Click="ClickButtonPromote" />
            <RadioButton Content="Rook" GroupName="PromotionOptions"
                         Click="ClickButtonPromote" />
            <RadioButton Content="Bishop" GroupName="PromotionOptions"
                         Click="ClickButtonPromote" />
            <RadioButton Content="Knight" GroupName="PromotionOptions"
                         Click="ClickButtonPromote" />
        </StackPanel>
    </StackPanel>

</Window>